extends layout
include mixins/_userCard
include mixins/_invitationCard

block content
  .inner
    if invitations.length
      .pageheader
        .title
          div= 'Pending Invites'
        .actions
          .actions--item
            a(href=`/account/users/invite`) Invite New User
      .lists
        each invitation in invitations
          +invitationCard(invitation)
    .pageheader
      .title
        div= 'Users'
      if !invitations.length
        .actions
          .actions--item
            a(href=`/account/users/invite`) Invite New User
    .lists
      each user in users
        +userCard(user)
