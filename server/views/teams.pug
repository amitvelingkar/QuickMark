extends layout
include mixins/_teamCard
include mixins/_emptyCard

block content
  .inner
    .pageheader
      .title
        div= title
      .actions
        .actions--item
          a(href=`/teams/add`) Create Team
    .lists
      if teams.length
        each team in teams
          +teamCard(team)
      else
        +emptyCard('No teams have been created yet, be the pioneer.','/teams/add')
