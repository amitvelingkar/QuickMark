extends layout

block content
  .inner
    h2 Welcome to QuickMark
    p <strong>#{invitation.email}</strong> will be added to <strong>#{invitation.account.name}</strong> organization. 
    p All we need is your name and a password.
    form.form(action=`/profile/invitation/${invitation.invitationToken}` method="POST")
      h2 Register
      label(for="name") Name
      input(type="text" name="name")
      label(for="password") Password
      input(type="password" name="password")
      label(for="password-confirm") Confirm Password
      input(type="password" name="password-confirm")
      input.button(type="submit" value="Register â†’")
    pre= h.dump(invitation)
